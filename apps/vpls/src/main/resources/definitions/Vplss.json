{
  "type": "object",
  "title": "vplss",

  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "String",
      "example": "VPLS1"
    },
    "Interfaces": {
      "type": "array",
      "xml": {
        "name": "interfaces",
        "wrapped": true
      },
      "items": {
        "type": "object",
        "title": "interfaces",
        "required": [
          "name",
          "connectPoint",
          "ips",
          "mac",
          "vlan"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "h1"
          },
          "properties": {
            "connectPoint": {
              "type": "string",
              "example": "of:0000000000000001/1"
            },
            "ips": {
              "type": "array",
              "example": ["10.0.1.1/24"]
            },
            "mac": {
              "type": "string",
              "example": "00:04:00:00:00:02"
            },
            "vlan": {
              "type": "string",
              "example": "100"
            }
          }
        }
      },
      "encapsulation": {
        "type": "String",
        "example": "vlan"
      },
      "state": {
        "type": "String",
        "example": "ADDED"
      }
    }
  }
}


