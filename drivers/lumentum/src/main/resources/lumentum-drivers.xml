    <driver name="lumentum-waveready" manufacturer="Lumentum" hwVersion="WR*">
        <behaviour api="org.onosproject.net.device.DeviceDescriptionDiscovery"
                   impl="org.onosproject.drivers.lumentum.LumentumWaveReadyDiscovery"/>
